Var
 dinheiro,litros, preco: real
 //Usei o preço de 6 da gasolina

Inicio

escreval("Você quer quantos reais de gasolina? ")
leia(dinheiro)
litros<- dinheiro/6
escreval("Colocaremos no seu carro: ", litros , " litros de gasolina")



